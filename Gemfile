source 'https://rubygems.org'

ruby '1.9.3'
gem 'rails', '3.2.14'

# Gems used only for assets and not required
# in production environments by default.
group :assets do
	gem 'sass-rails',   '~> 3.2.3'
	gem 'coffee-rails', '~> 3.2.1'

  gem 'therubyracer', :platforms => :ruby
  gem 'uglifier', '>= 1.0.3'
end

group :production do
  gem 'mysql2'
end

group :development do
  gem 'sqlite3'
  gem 'rspec-rails'
end

group :test do
  gem 'rspec'
  gem 'rspec-rails'
  gem 'spork'
end

group :test, :development do
  gem 'debugger'
end

gem 'jquery-rails'

gem 'carrierwave'
gem 'rmagick'
gem 'kaminari'
gem 'mail'
gem 'fog'

gem 'haml-rails'
gem 'twitter-bootstrap-rails'
gem 'less-rails-bootstrap'

gem 'omniauth'
gem 'omniauth-facebook'
gem 'omniauth-vkontakte'
gem 'omniauth-google-oauth2'
gem 'omniauth-github'

gem 'devise'
gem 'cancan'
gem 'rails_admin'

gem 'mongoid'
gem 'bson_ext'
